generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
 id    String @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  email     String   @unique
  password  String
  userType  UserType
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum UserType {
  STUDENT
  STAFF
}

model Admin {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Equipment {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Booking {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  userId     Int
  equipmentId Int
  startTime  DateTime
  endTime    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  @@unique([userId, equipmentId])
}

model Maintenance {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  equipmentId   Int
  maintenanceType String
  description   String
  maintenanceDate DateTime
  completedBy   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}